                </div><!--/col-->

                <!--center-right-->
                <div class="col-md-5">
                    <div class="panel panel-default">
                        <div class="panel-heading"><h4>Processing Status</h4></div>
                        <div class="panel-body">
                            {% if user|completePourcent > 50 %}
                                <small>Complete</small>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{user|completePourcent}}" aria-valuemin="0" aria-valuemax="100" style="width: {{user|completePourcent}}}}72%">
                                        <span class="sr-only">{{ user|completePourcent }}% Complete</span>
                                    </div>
                                </div>
                            {% else %}
                                <small>In Progress</small>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{ user|completePourcent }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ user|completePourcent }}%">
                                        <span class="sr-only">{{ user|completePourcent }}% Complete</span>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div><!--/panel-body-->
                    <div class="panel panel-info">
