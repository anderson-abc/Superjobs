{% extends "SuperjobsHomeBundle::layout.html.twig" %}
{% block container %}

<header class="intro-header">
	<div class="container">
		<center>
			<div class="headline">
				<div class="container">
					<div class="Heading">
						<h2>Superjobs</h2>
						<hr class="small">
					</div>
				</div>
			</div>
		</center>
	</div>
</header>

<center><br/>
    <form class="form-search">
        <div class="input-append">
          Chercher votre offre : <input type="text" class="span6 search-query">
{#          <input class="form-control" id="inputDefault" type="text">#}
          <button type="submit" class="btn">Search</button>
        </div>
    </form>
</center>       
{# total items count #}
<div class="count">
    {{ pagination.getTotalItemCount }} Offres d'emploi
</div>

<center>
<div class="pagination">
    {{ knp_pagination_render(pagination, "", {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}
</div>
</center>

<div class="row">
    <div class="col-xs-12 col-md-8">
{% for article in pagination %}
<div class="items">
    <div class="row">
        <div class="col-md-2">
            <time class="calendar">
                <em>{{ article.createdAt|date('Y')}}</em>
                <strong>{{ article.createdAt|date('d')}} {{ article.createdAt|date('M')}}</strong>
            </time>        
        </div>
            
        <div class="col-md-8 vertical" >
            <a href="{{ path('superjobs_home_recruiter_job_details', { 'tag': article.id }) }}">
                <h4>{{ article.title }}</h4>
            </a>
            
            <i class="fa fa-compress"></i> {{ article.type }}
            <i class="fa fa-map-marker"></i> {{ article.location }}
            <i class="fa fa-building"></i> {{ article.company }}   
        </div>
    </div>
</div>
<hr style="margin:0px;">
{% endfor %}
    </div>
    <div class="col-xs-6 col-md-4">
        <img src="{{ asset('bundles/superjobshome/img/publicitÃ©.jpg')}}" width="100%">
    </div>
</div>
<center>
<div class="pagination">
    {{ knp_pagination_render(pagination, "", {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}
</div>
</center>

<style>
.items:hover {
    background-color: #E5E9ED;
}
</style>
{% endblock %}