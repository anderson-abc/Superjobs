{% extends "SuperjobsHomeBundle::layout.html.twig" %} {% block container
%}
<br />
<div class="row">
	<div class="col-md-8">
		<div class="col-md-4">

			{% if job.logo == "NULL" %}
			<div style="font-size: 12em;">
				<i class="fa fa-building-o fa-3"></i>
			</div>
			{% else %} <img class="img-responsive img-center"
				src="{{ asset('upload/'~job.logo) }}"> {% endif %}
		</div>
		<div class="col-md-8">
			<div>
				<h2>{{ job.title }}</h2>
			</div>
			{% set skills = job.skills|split(',') %} {% for skill in skills %} <span
				class="label label-default"> {{ skill }} </span> {% endfor %} <br> <strong>{{
				job.company }}</strong>
		</div>
		<div class="row">
			<div class="col-md-12">
				<hr>
				<h3>Description :</h3>
				{{ job.description|raw }} <br /> <br /> <br />
				<button type="button" class="btn btn-primary btn-lg"
					data-toggle="modal" data-target="#myModal">Postuler maintenant</button>
			</div>
		</div>

	</div>
	<div class="col-md-4">
		<br> Les offres simulaires <br> ici
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
	aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document" style="z-index: inherit;">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"
					aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="myModalLabel">
					Envoyer nous votre candidature rapidement sans unscription
				</h4>
			</div>

			<form class="form-horizontal" >
				<div class="modal-body">
					 
					{#	Formulaire d'envoi de cv #}

					<div class="form-group">
						<label for="inputName3" class="col-sm-2 control-label">Nom</label> 
						<div class="col-sm-10">
							<input type="text" class="form-control" id="inputName3"	placeholder="Jane Doe">
						</div>
					</div>
					<div class="form-group">
					    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
					    <div class="col-sm-10">
					      <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
					    </div>
					</div>
					<div class="form-group">
						<label for="inputEmail2" class="col-sm-3 control-label">Entrez votre CV</label> 
						<div class="col-sm-9">
							<input type="file">
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Envoyer cadidature</button>
				</div>
			</form>
		</div>
	</div>
</div>
{% endblock %}
