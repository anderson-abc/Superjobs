{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Jobs list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_user</th>
                <th>Title</th>
                <th>Categories</th>
                <th>Type</th>
                <th>Company</th>
                <th>Logo</th>
                <th>Url</th>
                <th>Location</th>
                <th>Price</th>
                <th>Description</th>
                <th>Skills</th>
                <th>Emailcv</th>
                <th>Token</th>
                <th>Ispublic</th>
                <th>Iscreated</th>
                <th>Expiresat</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('jobs_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.iduser }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.Categories }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.company }}</td>
                <td>{{ entity.logo }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.salary }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.skills }}</td>
                <td>{{ entity.emailCV }}</td>
                <td>{{ entity.token }}</td>
                <td>{{ entity.isPublic }}</td>
                <td>{{ entity.isCreated }}</td>
                <td>{% if entity.expiresAt %}{{ entity.expiresAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('jobs_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('jobs_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('jobs_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
