{% extends 'SuperjobsHomeBundle::layout.html.twig' %}

{% block container %}
    <h1>Jobs list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Categories</th>
                <th>Type</th>
                <th>Company</th>
                <th>Logo</th>
                <th>Url</th>
                <th>Location</th>
                <th>Price</th>
                <th>Description</th>
                <th>Skills</th>
                <th>Emailcv</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('jobs_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.Categories }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.company }}</td>
                <td><img src="{{ asset('/Users/' ~ entity.iduser ~ '/' ~ entity.logo) }}" width="100"></td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.salary }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.skills }}</td>
                <td>{{ entity.emailCV }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('jobs_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('jobs_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('jobs_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
