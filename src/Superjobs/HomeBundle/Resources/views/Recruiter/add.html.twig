{% block container %}

    <centre>
        <h3>Remplissez et publiez votre offre</h3>
        <hr>
    </centre>

    {{ form_start(form, {'action': path('superjobs_home_recruiter_add'), 'method': 'POST'}) }}
    {{ form_errors(form) }} 
    <div class="form-group">
        <label for="exampleInputEmail1"> {{ form_label(form.title) }} {{
		form_widget(form.title, { 'attr': {'class': 'form-control'} }) }} </label>
            {{ form_errors(form.title) }}
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
