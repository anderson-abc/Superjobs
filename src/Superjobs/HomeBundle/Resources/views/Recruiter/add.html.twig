                Photoshop {# <label for="exampleInputEmail1"> {{
                form_label(form.skills) }} {{ form_widget(form.skills, { 'attr':
                {'class': 'form-control'} }) }} </label> {{ form_errors(form.skills)
                }}#}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label for="exampleInputEmail1"> {{ form_label(form.location) }} {{
				form_widget(form.location, { 'attr': {'class': 'form-control'} }) }}
                </label> {{ form_errors(form.location) }}
            </div>
        </div>
    </div>

    Rénumération annuelle :
    <select class="form-control" name="price">
        <option value="nc">Non communiquée</option>
        <option value="24000">&lt;24000</option>
        <option value="25000-34000">25000-34000</option>
        <option value="35000-44000">35000-44000</option>
        <option value="45000-54000">45000-54000</option>
        <option value="55000-59000">55000-59000</option>
        <option value="60000-69000">60000-69000</option>
        <option value="70000">&gt;70000</option>
    </select>
    {{ form_label(form.description) }} {{ form_errors(form.description) }}
    {{ form_widget(form.description) }}
    <br />


    {# {{ form_widget(form.captcha) }}#}
    <br />
    <br />
    {# ################## Description de l'entreprise ############ #}
    <h3>Description de l'entreprise</h3>
    <hr>
    <div class="form-group">
        <label for="exampleInputEmail1"> {{ form_label(form.company) }} {{
		form_widget(form.company, { 'attr': {'class': 'form-control'} }) }} </label>
            {{ form_errors(form.company) }}

        <div class="form-group">
            <label for="exampleInputEmail1"> {{ form_label(form.logo) }} {{
		form_widget(form.logo) }} </label> {{ form_errors(form.logo) }}
        </div>

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1"> Email que vous recevez les candidatures : 
            {{ form_widget(form.emailCV, { 'attr': {'class': 'form-control'} }) }} 
        </label>
        {{ form_errors(form.emailCV) }}
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1"> 
            {{ form_label(form.url) }}  
            {{ form_widget(form.url, { 'attr': {'class': 'form-control'} }) }} 
        </label>

        {{ form_errors(form.url) }}
    </div>

    {{ form_rest(form) }}
    <center>
        <input type="submit" value="Envoyer" class="btn btn-success" /> <a
            href="{{ path('superjobs_home_recruiter_intro') }}"
            class="btn btn-primary">Annuler</a>
    </center>
    {% for flashMessage in app.session.flashbag.get('success') %}

        {{ flashMessage }}

    {% endfor %}
